.tagsWrapper,
.categoriesWrapper
  .tagList
    width: 600px
    display: flex
    border: 1px solid --border-color
    flex-wrap: wrap;
    border-radius: 6px
    padding: 30px
    max-width: 100%
    a
      margin-right: 20px
      padding: 8px 16px;
      color: --default-color
      &:hover
        color: --color-primary;
        content: ")"

