.recentList
  border-radius 6px
  .recentLeft,
  .recentRight
    display flex
    justify-content space-between
    width: calc(50% - 10px)
    min-width: 280px
    > div
      margin-top 16px
  .recentCard
    position relative
    height 120px
    line-height: 22px;
    flex-grow: 1
    &.talkCard
      background-color #b3dcf5
      border none
      .speaker
        position absolute
        left: 16px
        top: 10px
      .talkCardContent
        position: relative;
        overflow: hidden;
    &.recentPictureSlider
      flex-grow: 1;
      overflow: hidden;
      border-radius 6px
      .picture
        background-size: cover
        height: 120px
        background-position: center
.recentList,
.articleList
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  > div
    width: calc(50% - 10px)
.articleList
  > div
    margin-top 16px


@media screen and (max-width: 681px)
  .recentList,
  .articleList
    > div
      width: 100% !important;

@media screen and (max-width: 415px)
  .recentLeft
    display: block !important;
    > div
      width: 100% !important;
      margin-left: 0 !important;