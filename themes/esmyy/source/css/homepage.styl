// home
.recentList
  display grid
  grid-template-columns: repeat(2, 50%)
  grid-column-gap: 16px
  grid-row-gap: 16px
  .recentLeft
    display flex
    justify-content space-between
  .recentCard
    margin-right: 0;
    margin-top: 20px;
    width 32%
    height 100px
    .cardTitle
      font-weight: bold;
    &.lifeCard
      display flex
      flex-direction column
      justify-content space-between
    &.readingCard
      flex-grow 1
      margin-left: 20px;
      background-color #ede0d9
      border none
      .readingCardContent
        position: relative;
        height: 44px;
        line-height: 22px;
        overflow: hidden;
      .bookName
        margin-left: -5px;
    &.recentPictureSlider
      width 360px
      overflow: hidden;
      border-radius 6px
      margin-left: 0;
      img
        width 120px
    &.talkCard
      background-color #b3dcf5
      border none
      .talkCardContent
        position: relative;
        height: 44px;
        line-height: 22px;
        overflow: hidden;
  .recentRight
    display flex
    justify-content space-between

.articleList
  margin-top: 20px;
  display grid
  grid-template-columns: repeat(2, 50%)
  grid-column-gap: 16px
  grid-row-gap: 16px

