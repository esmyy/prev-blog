header,
footer,
main
  position relative
  width 100%;

header
  height 72px
  border-bottom 1px solid --border-color
  .avatar-box
    position: absolute;
    top: 12px
    right  20px
    .avatar
      width 50px
      height 50px
      border-radius 50%
      cursor pointer
      &:hover
        box-shadow 0 0 8px #6192de

main
  min-height 100vh
  width 1120px
  margin 0 auto

footer
  border-top 1px solid --border-color
  margin-top 80px
  padding 16px 0
  padding-bottom: 30px;

.mainContent
  width 1120px
  margin 0 auto

a
  cursor: pointer;
  color: #0969da;
.card
  height 120px
  padding 14px 16px
  border 1px solid --border-color
  border-radius 6px

.center
  text-align center
.h-auto
  height auto

.h-100
  height 100%
.border
  border 1px solid --border-color
.radius
  border-radius 6px

