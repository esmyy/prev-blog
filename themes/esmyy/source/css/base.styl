.verticalAlignTextTop
  vertical-align: text-top;
.ellipsis
  position: relative;
  overflow : hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
.ellipse2
  @extend .ellipsis;
  -webkit-line-clamp: 2;
.ellipse3
  @extend .ellipsis;
  -webkit-line-clamp: 3;
.ellipse4
  @extend .ellipsis;
  -webkit-line-clamp: 4;

.hidden
  display: none !important
.visible
  display: inherit;

.flex {
  display: flex !important;
