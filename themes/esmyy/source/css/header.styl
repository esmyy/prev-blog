header
  height 60px
  border-bottom 1px solid --border-color
  .headerContent
    height: 100%
  .menus
    height 100%
    display flex
    align-items flex-end
    list-style none
    font-size 16px
    margin-left -16px
    li
      margin 0 16px
      a
        display flex
        align-items center
        padding 0 8px
        padding-bottom: 8px;
        color --default-color
        text-decoration none;
        iconpark-icon
          margin-right: 8px;
      &.selected
        border-bottom 2px solid orange
        margin-bottom -1px

  .avatar-box
    position: absolute;
    top: 12px
    right  20px
    .avatar
      width 42px
      height 42px
      border-radius 50%
      cursor pointer
      &:hover
        box-shadow 0 0 8px #6192de

@media screen and (max-width: 681px)
  header
    height 48px
    .menus
      font-size: 14px
      li
        margin: 0 6px
        &.optionalMenuItem
          display: none;
    .avatar-box
      top: 10px
      right: 10px
      .avatar
        width: 32px
        height: 32px