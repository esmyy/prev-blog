.firstScreen
  position relative
  width: 100vw
  height: 100vh
  background-image: linear-gradient(to top, #cfd9df 0%, #e2ebf0 100%);
  background-position-y: bottom;
  background-size: cover
  &.hidden
    display: none;
    opacity 0;
    transition: opacity 1s ease;
    animation: firstScreenHidden 10s infinite;

  .lifeCard
    position absolute
    left: 50%
    top: 40%
    transform: translateX(-50%)
    background-color: rgba(0,0,0,0.2)
    border-radius: 4px
    color: #fff
    padding: 20px
    text-align: center
    line-height: 30px
  .author
    text-align: right
  .pictureIntroduction
    position absolute
    bottom: 20px
    right: 20px
    line-height: 24px
    p
      display: flex
      align-items: center


@media screen and (max-width: 768px)
  .firstScreen
    height: 36vh
    .lifeCard
      top: 36%
      padding: 12px

    .pictureIntroduction
      bottom: 12px
      right: 12px