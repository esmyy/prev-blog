.loadmoreWrapper {
  margin-top: 20px;
  span {
    display: inline-block;
  }
  .more {
    background: #6b9ddd;
    padding: 6px 12px;
    border-radius: 6px;
    color: #fff;
    cursor pointer
  }
}

.loadmoreWrapper.loading {
  .more {
    display: none;
  }
  .nomore {
    display: none;
  }
}

.loadmoreWrapper.nomore {
  .loading {
    display: none;
  }
  .more {
    display: none;
  }
}

.loadmoreWrapper.more {
  .loading {
    display: none;
  }
  .nomore {
    display: none;
  }
}
