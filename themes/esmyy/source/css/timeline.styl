.timeline
  margin-top 50px
  margin-left: 10px;
  padding-left: 20px;
  border-left: 2px solid #aadafa;
  .timelineItem
    position relative
    display flex
    flex-direction: column
    margin: 0 0 20px 10px;
    transition: all 0.2s ease-in-out;
    .date
      font-size: larger
    .title
      font-weight: bold
    .summary
      margin-top 4px
    &::before
      position: absolute;
      left: calc(-20px - 17px);
      width: 6px;
      height: 6px;
      top: 12px
      border: 3px solid #608fe0
      border-radius: 6px;
      background: #fff
      content: '';
      transition: all 0.2s ease-in-out;
    &.year
      font-size: 1.43em
      &::before
        top: 8px
        border-color: #ff7242;
    .poster
      width: 200px
      border-radius: 4px
      margin-top 8px