.calendarWrapper
  margin-top: 20px;
  max-width: 100%;
  .excerpt
    font-size 16px
    font-weight 400
  .contribution-box
    display inline-block
    padding 8px
.calendarDay
  shape-rendering: geometricPrecision;
  outline-offset: -1px;

.calendarDay[data-level="0"]
  fill  --color-calendar-graph-day-bg
  outline 1px solid --color-calendar-graph-day-border

.calendarDay[data-level="1"]
  fill  --color-calendar-graph-day-L1-bg
  outline 1px solid --color-calendar-graph-day-L1-border

.calendarDay[data-level="2"]
  fill  --color-calendar-graph-day-L2-bg
  outline 1px solid --color-calendar-graph-day-L2-border

.calendarDay[data-level="3"]
  fill  --color-calendar-graph-day-L3-bg
  outline 1px solid --color-calendar-graph-day-L3-border

.calendarDay[data-level="4"]
  fill  --color-calendar-graph-day-L4-bg
  outline 1px solid --color-calendar-graph-day-L4-border

.calendarLabel
  font-size: 12px;
  fill: --default-color
.level-box
  display flex
  align-items center
  justify-content flex-end
  .text
    display inline-block
    padding-right: 4px;
  svg
    margin-right: 4px;

@media screen and (max-width: 768px)
  .calendarWrapper
    display: none;
