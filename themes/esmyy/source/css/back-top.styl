.backTopWrapper
  position: fixed
  bottom 20px
  right: -60px
  transition: all 500ms ease-in
  &.visible
    right: 20px
    transition: all 500ms ease-in

  .backTopIcon
    width: 36px
    height 36px
    border-radius: 4px
    background-color: #b3dcf5
    display: flex
    justify-content: center
    align-items: center
    font-weight: bold
    color: #fff

