.articleContent
  position relative
  padding-top: 20px
  display: flex
.articleTitle
  text-decoration none
  color #1e3e3f;
.articleMeta
  display: flex
  align-items: center
  .date
    padding-left 6px
.articleBody
  margin-top 1rem
  clearfix()
  .qrImgWrapper
    margin-top 20px
    img
      max-width: 300px
  h1, h2, h3, h4, h5, h6
    margin: 2rem 0 1rem 0;
  hr
    height border-width
    background-color border-color
    border none
    padding 0
    margin 1.5rem 0
  strong
    font-weight bold
  em, cite
    font-style italic
  sup, sub
    font-size 75%
    line-height 0
    position relative
    vertical-align baseline
  sup
    top -.5rem
  sub
    bottom -.25rem
  small
    font-size 85%
  acronym, abbr
    border-bottom border-width border-color dotted
  ul, ol, dl
    margin 1.5rem 0
    line-height line-height

  ul, ol
    padding-left 2em

  ul
    list-style-type circle

  p,
  table,
  blockquote
    margin 1rem 0

  h1 +p,
  h2 +p,
  h3 +p,
  h4 +p
    margin-top: 1rem !important;
  img, video
    max-width 100%
    height auto
    display inline-block
    margin auto
  iframe
    border none
  table
    width 100%
    border-collapse collapse
    vertical-align middle
    empty-cells show
    text-align left
    th, td, &
      border border-width border-color solid
    th, td
      padding 1rem 1.5rem
    tbody
      tr:nth-child(2n)
        background-color rgba(froth, .25)

  blockquote
    position relative
    display block
    padding 0 1.5rem 0 4.5rem
    width 100%
    overflow auto
    color sea-lighter
    &:before
      content url("data:image/svg+xml;base64,")
      display block
      width 3rem
      position absolute
      left 0
      top 0
    > :first-child
      margin-top 0;
    > :last-child
      margin-bottom 0;
    footer
      cite
        &:before
          content "â€”"
          padding 0 .5rem
  .pullquote
    text-align left
    width 45%
    margin 0
    &.left
      margin-left 0.5em
      margin-right 1em
    &.right
      margin-right 0.5em
      margin-left 1em
  .caption
    color gray
    display block
    font-size 0.9em
    margin-top 0.5em
    position relative
    text-align center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position relative
    padding-top (9 / 16 * 100) % // 16:9 ratio
    height 0
    overflow hidden
    iframe, object, embed
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      margin-top 0
